<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="youtube">

    <select id="test" resultType="Integer">
        SELECT b_like
            FROM board
                WHERE
            b_no = 2
    </select>

    <update id="studentTimeSave" parameterType="HashMap">
        UPDATE board
            SET
                b_like = ${curr_time}
        WHERE
            b_no = 2
    </update>

</mapper>